AWSTemplateFormatVersion: "2010-09-09"
Description: Joomla on EC2 with RDS MySQL in a simple VPC (multi-AZ RDS)

Parameters:

  KeyName:
    Type: AWS::EC2::KeyPair::KeyName
    Description: Name of an existing EC2 KeyPair to SSH into the server.

  InstanceType:
    Type: String
    Default: t3.micro
    AllowedValues:
      - t2.micro
      - t3.micro
      - t3.small
      - t3.medium

  DBUser:
    Type: String
    Default: joomlauser
    Description: RDS database username

  DBPassword:
    NoEcho: true
    Type: String
    MinLength: 8
    Description: RDS database password

  SSHLocation:
    Type: String
    Default: 0.0.0.0/0
    Description: Restrict SSH access


Resources:

  #######################
  # VPC & Networking
  #######################
  SimpleVPC:
    Type: AWS::EC2::VPC
    Properties:
      CidrBlock: 10.0.0.0/16
      EnableDnsHostnames: true
      EnableDnsSupport: true
      Tags:
        - Key: Name
          Value: SimpleVPC

  PublicSubnet:
    Type: AWS::EC2::Subnet
    Properties:
      VpcId: !Ref SimpleVPC
      CidrBlock: 10.0.1.0/24
      MapPublicIpOnLaunch: true
      AvailabilityZone: !Select [0, !GetAZs ""]

  PrivateSubnetA:
    Type: AWS::EC2::Subnet
    Properties:
      VpcId: !Ref SimpleVPC
      CidrBlock: 10.0.2.0/24
      AvailabilityZone: !Select [0, !GetAZs ""]

  PrivateSubnetB:
    Type: AWS::EC2::Subnet
    Properties:
      VpcId: !Ref SimpleVPC
      CidrBlock: 10.0.3.0/24
      AvailabilityZone: !Select [1, !GetAZs ""]

  InternetGateway:
    Type: AWS::EC2::InternetGateway

  AttachIGW:
    Type: AWS::EC2::VPCGatewayAttachment
    Properties:
      VpcId: !Ref SimpleVPC
      InternetGatewayId: !Ref InternetGateway

  PublicRouteTable:
    Type: AWS::EC2::RouteTable
    Properties:
      VpcId: !Ref SimpleVPC

  PublicRoute:
    Type: AWS::EC2::Route
    DependsOn: AttachIGW
    Properties:
      RouteTableId: !Ref PublicRouteTable
      DestinationCidrBlock: 0.0.0.0/0
      GatewayId: !Ref InternetGateway

  PublicSubnetRouteTableAssociation:
    Type: AWS::EC2::SubnetRouteTableAssociation
    Properties:
      SubnetId: !Ref PublicSubnet
      RouteTableId: !Ref PublicRouteTable


  #######################
  # Security Groups
  #######################
  WebServerSG:
    Type: AWS::EC2::SecurityGroup
    Properties:
      GroupDescription: Allow HTTP/HTTPS/SSH
      VpcId: !Ref SimpleVPC
      SecurityGroupIngress:
        - IpProtocol: tcp
          FromPort: 22
          ToPort: 22
          CidrIp: !Ref SSHLocation
        - IpProtocol: tcp
          FromPort: 80
          ToPort: 80
          CidrIp: 0.0.0.0/0
        - IpProtocol: tcp
          FromPort: 443
          ToPort: 443
          CidrIp: 0.0.0.0/0

  RDSSG:
    Type: AWS::EC2::SecurityGroup
    Properties:
      GroupDescription: Allow MySQL from EC2
      VpcId: !Ref SimpleVPC
      SecurityGroupIngress:
        - IpProtocol: tcp
          FromPort: 3306
          ToPort: 3306
          SourceSecurityGroupId: !Ref WebServerSG


  #######################
  # RDS MySQL
  #######################
  RDSSubnetGroup:
    Type: AWS::RDS::DBSubnetGroup
    Properties:
      DBSubnetGroupDescription: Subnet group for RDS
      SubnetIds:
        - !Ref PrivateSubnetA
        - !Ref PrivateSubnetB

  JoomlaDB:
    Type: AWS::RDS::DBInstance
    Properties:
      DBInstanceClass: db.t3.micro
      AllocatedStorage: "20"
      Engine: mysql
      EngineVersion: "8.0"
      MasterUsername: !Ref DBUser
      MasterUserPassword: !Ref DBPassword
      DBName: joomla
      PubliclyAccessible: false
      VPCSecurityGroups:
        - !Ref RDSSG
      DBSubnetGroupName: !Ref RDSSubnetGroup


  #######################
  # EC2 Joomla
  #######################
  JoomlaInstance:
    Type: AWS::EC2::Instance
    Properties:
      InstanceType: !Ref InstanceType
      KeyName: !Ref KeyName
      SubnetId: !Ref PublicSubnet
      SecurityGroupIds:
        - !Ref WebServerSG
      ImageId: "{{resolve:ssm:/aws/service/canonical/ubuntu/server/24.04/stable/current/amd64/hvm/ebs-gp3/ami-id}}"
      Tags:
        - Key: Name
          Value: Joomla-Ubuntu
      UserData:
        #!/bin/bash
        set -xe
        # Update packages
        apt update -y
        
        # Install NGINX + PHP-FPM + necessary PHP extensions + unzip + wget
        apt install -y nginx php-fpm php-mysql php-xml php-mbstring \
                       php-json php-curl php-zip php-gd php-cli unzip wget
        
        # Enable and restart NGINX
        systemctl enable nginx
        systemctl restart nginx
        
        # Download Joomla 4 latest stable
        cd /tmp
        wget -O joomla.zip https://github.com/joomla/joomla-cms/releases/latest/download/Joomla_4-Stable-Full_Package.zip
        unzip joomla.zip -d /var/www/html/
        rm joomla.zip
        
        # Set permissions
        chown -R www-data:www-data /var/www/html
        chmod -R 755 /var/www/html
        
        # Create swap (needed for t2.micro/t3.micro)
        fallocate -l 2G /swapfile
        chmod 600 /swapfile
        mkswap /swapfile
        swapon /swapfile
        echo "/swapfile swap swap defaults 0 0" | tee -a /etc/fstab
        
        # Configure NGINX for Joomla
        cat <<EOF > /etc/nginx/sites-available/default
        server {
            listen 80 default_server;
            root /var/www/html;
            index index.php index.html;
        
            location / {
                try_files \$uri \$uri/ /index.php?\$args;
            }
        
            location ~ \.php$ {
                include snippets/fastcgi-php.conf;
                fastcgi_pass unix:/var/run/php/php8.1-fpm.sock;
            }
        
            location ~* \.(js|css|png|jpg|jpeg|gif|ico|svg)$ {
                try_files \$uri =404;
            }
        }
        EOF
        
        systemctl restart nginx
        systemctl restart php8.1-fpm || true
        
        # -------------------------------
        # Joomla CLI headless installation
        # -------------------------------
        
        cd /var/www/html
        
        # Run Joomla CLI installer
        php cli/joomla.php site:install \
            --db-driver=mysqli \
            --db-host=${JoomlaDB.Endpoint.Address} \
            --db-user=${DBUser} \
            --db-pass=${DBPassword} \
            --db-name=joomla \
            --db-prefix=jos_ \
            --admin-user=admin \
            --admin-pass=Admin123! \
            --admin-email=admin@example.com \
            --site-name="My Joomla Site" \
            --force
        
        # Set ownership after CLI install
        chown -R www-data:www-data /var/www/html
        chmod -R 755 /var/www/html
      
      
      
Outputs:

  WebsiteURL:
    Description: Joomla Website URL
    Value: !Sub "http://${JoomlaInstance.PublicDnsName}"

  RDSEndpoint:
    Description: RDS Connection Endpoint
    Value: !GetAtt JoomlaDB.Endpoint.Address
